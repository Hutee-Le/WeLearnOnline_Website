@model WeLearnOnine_Website.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Log in";
}
<div class="row my-lg-5">
    <div class="col-md-12 d-flex justify-content-center flex-column align-items-center container-form">
    <h1 class="fs-1 fw-bold mb-3">@ViewData["Title"]</h1>
            <form id="account" method="post">
                <h3 class="text-center">Use a local account to log in.</h3>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Email" class="form-label mb-1"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Password" class="form-label mb-1"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox mt-2">
                        <label asp-for="RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-4 btn-main-whtie">Log in</button>
                </div>
                <div>
                    @*   <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p> *@
                    <p class="d-flex justify-content-center mt-3">
                        <a asp-action="Register" asp-controller="User">Register as a new user</a>
                    </p>

                    @*
                    <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p> *@
                </div>
            </form>
    </div>
