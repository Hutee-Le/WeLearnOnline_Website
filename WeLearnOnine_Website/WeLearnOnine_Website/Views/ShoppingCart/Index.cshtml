<section class="shopping-cart spad">
    <div class="container-fluid d-flex flex-column justify-content-center align-items-center">
        <div class="cart-title-section d-flex">
            <h1 class="ud-heading-xxxl">
                Shopping Cart
            </h1>
        </div>
        <div class="cart--notifications-section">
            <div class="styles--notifications">
            </div>
        </div>
        <div class="cart--shopping-section d-flex mt-4">
            <div class="cart--shopping-lists-pane">
                <div class="styles--shopping-list">
                    <h3 class="ud-heading-md">
                        3 Courses in Cart
                    </h3>
                    <ul class="ud-unstyled-list">
                        @foreach (var detail in Model.Bill.BillDetails)
                        {
                            <div class="shopping-item--shopping-item-wrapper">
                                <div class="shopping-item--container">
                                    <div class="shopping-item--image">
                                        <div class="shopping-item--image-wrapper">
                                            <img class="shopping-item--course-image"
                                                 src="@detail.Course.ImageCourseUrl" alt=""
                                                 class="shopping-item--course-image">
                                        </div>
                                    </div>
                                    <div class="shopping-item--header">
                                        <h3 class="ud-heading-md">
                                            <a href="#">
                                                @detail.Course.Title
                                            </a>
                                        </h3>
                                        <div class="ud-text-xs shopping-item--instructors">
                                            <span class="ud-sr-only">
                                                Instructors:
                                            </span>
                                            <span class="shopping-item--instructor-list">
                                                By Kirill Eremenko and 3 others
                                            </span>
                                        </div>
                                    </div>
                                    <div class="shopping-item--badges">
                                        <div class="ud-badge ud-heading-xs course-badges-module--bestseller">
                                            Bestseller
                                        </div>
                                        <div class="ud-badge ud-heading-xs course-badges-module--updated-recently">
                                            Updated Recently
                                        </div>
                                    </div>
                                    <div class="shopping-item--rating">
                                        <div class="star-rating-module--star-wrapper star-rating-module--medium">
                                            <span class="ud-sr-only">Rating: 4.5 out of 5</span>
                                            <span class="ud-heading-sm star-rating-module--rating-number" aria-hidden="true"
                                                  data-purpose="rating-number">4.5</span>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star-half-alt"></i>
                                        </div>
                                        <span class="ud-text-xs shopping-item--reviews-text">(175,765 ratings)</span>
                                    </div>
                                    <div class="ud-text-xs shopping-item--meta">
                                        <span class="shopping-item--meta-item">@detail.Course.TimeTotal total hours</span>
                                        <span class="icon">
                                            <i class="fas fa-circle"></i>
                                        </span>
                                        <span class="shopping-item--meta-item">383 lectures</span>
                                        <span class="icon">
                                            <i class="fas fa-circle"></i>
                                        </span>
                                        <span class="shopping-item--meta-item">@detail.Course.Level.Name</span>
                                    </div>
                                    <div class="shopping-item--vertical-actions">
                                        <button type="button" class="ud-btn ud-btn-xsmall ud-btn-ghost ud-text-sm">
                                            <span>Remove</span>
                                        </button>
                                        <button type="button" class="ud-btn ud-btn-xsmall ud-btn-ghost ud-text-sm">
                                            <span>Save for Later</span>
                                        </button>
                                    </div>
                                    <div class="shopping-item--price-container">
                                        <div class="price-text--container shopping-item--price shopping-item--price-discounted-styles">
                                            <div class="price-text--price-part shopping-item--price-text--2VEWH ud-heading-md">
                                                <span class="ud-sr-only">
                                                    Current price
                                                </span>
                                                <span>
                                                    <span>
                                                        ₫@detail.Course.Price
                                                    </span>
                                                </span>
                                            </div>
                                            @if (detail.Course.DiscountPrice.HasValue)
                                            {
                                            <div class="price-text--price-part price-text--original-price--1sDdx shopping-item--price-text--2VEWH ud-text-sm" data-purpose="original-price-container">
                                                <div data-purpose="course-old-price-text">
                                                    <span class="ud-sr-only">Original Price</span>
                                                    <span>
                                                        
                                                            <s>
                                                                <span>₫@detail.Course.DiscountPrice</span>
                                                            </s>
                                                        
                                                    </span>
                                                </div>
                                            </div>
                                            }
                                        </div>
                                        <div class="popper-module--popper shopping-item--coupon-icon-tooltip">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </ul>
                </div>
            </div>
            <div class="cart--checkout-pane">
                <div>
                    <div class="total-price--total-checkout-container">
                        <div class="price-text--container total-price--container-desktop-layout">
                            <div class="total-price--total-label ud-heading-md">
                                Total:
                            </div>
                            <div class="price-text--price-part ud-heading-xxl">
                                <span>
                                    <span>
                                        ₫997,000
                                    </span>
                                </span>
                            </div>
                            <div class="price-text--price-part price-text--original-price ud-text-md">
                                <span>
                                    <s>
                                        <span>
                                            ₫5,597,000
                                        </span>
                                    </s>
                                </span>
                            </div>
                            <div class="price-text--price-part ud-text-md">
                                <span>
                                    82% off
                                </span>
                            </div>
                        </div>
                    </div>
                    <div>
                        <button type="button" class="ud-btn ud-btn-large ud-btn-brand ud-heading-md checkout-button--checkout-button--a6YjA">
                            <span>
                                Checkout
                            </span>
                        </button>
                    </div>
                    <div class="styles--redeem-coupon-wrapper">
                        <div>
                            <div class="redeem-coupon--add-coupon-button--gEFrS"></div>
                            <p class="ud-heading-md redeem-coupon--title--GmLKT">Promotions</p>
                            <div class="redeem-coupon--codes--yrm-S">
                                <p class="redeem-coupon--code--3lfGJ redeem-coupon--code-in-checkout-pane--BYsiV">
                                    <button class="close-button">
                                        <svg class="close-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M5.293 5.293a1 1 0 011.414 0L10 8.586l3.293-3.293a1 1 0 111.414 1.414L11.414 10l3.293 3.293a1 1 0 11-1.414 1.414L10 11.414l-3.293 3.293a1 1 0 01-1.414-1.414L8.586 10 5.293 6.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                                        </svg>
                                    </button>
                                    <span class="redeem-coupon--code-text--2HFA4">
                                        <b>ST20MT100423</b>
                                        is applied
                                    </span>
                                </p>
                            </div>
                            <div class="coupon-form--coupon-form-group--2fnQg ud-form-group">
                                <label class="ud-sr-only ud-form-label ud-heading-sm" for="u18-form-group--38">Apply coupon</label>
                                <form action="#" class="text-input-form-module--text-input-form--9uxfY">
                                    <input aria-invalid="false" data-purpose="coupon-input" placeholder="Enter Coupon" id="u18-form-group--38" type="text" class="ud-text-input ud-text-input-small ud-text-sm" value="">
                                    <button type="submit" data-purpose="coupon-submit" class="ud-btn ud-btn-small ud-btn-brand ud-heading-sm"><span>Apply</span></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
