@model WeLearnOnine_Website.ViewModels.UserRoleViewModel

@{
    ViewData["Title"] = "CreateStaff";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fuild flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4"><span class="text-muted fw-light">Roles /</span>Edit</h4>
    <h2>Manage User Roles</h2>

    <h3>User Information</h3>
    <p><strong>User ID:</strong> @Model.UserId</p>
    <p><strong>User Name:</strong> @Model.UserName</p>

    <h3>Current Roles</h3>
    <ul>
        @foreach (var role in Model.UserRoles)
        {
            <li>@role</li>
        }
    </ul>

    <h3>Assign Roles</h3>
    <form method="post">
        <div class="form-group">
            <label for="SelectedRoles">Select Roles:</label>
            <select class="form-control" multiple="multiple" id="SelectedRoles" name="SelectedRoles">
                @foreach (var role in Model.AllRoles)
                {
                    <option value="@role.Value">@role.Text</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Save Roles</button>
    </form>
