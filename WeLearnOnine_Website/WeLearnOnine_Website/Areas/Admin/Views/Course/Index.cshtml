@model IEnumerable<WeLearnOnine_Website.Models.Course>

@{
    ViewData["Title"] = "ListCourse";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h4 class="py-3 mb-4"><span class="text-muted fw-light">Course /</span> Course Table</h4>

<p>
    <a asp-action="CreateCourse" class="btn rounded-pill btn-primary text-white">
        Create New
    </a>
</p>

@* <button type="button" class="btn rounded-pill btn-primary">Primary</button> *@

<div class="card">
    <h5 class="card-header">Courses Table</h5>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> <b style="font-size: 20px">#</b></th>
                        <th>
                            <b>No.</b> StaffId
                        </th>
                        <th>
                            Level
                        </th>
                        <th>
                            Title
                        </th>
                        <th>
                            ShortDescription
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Required
                        </th>
                        <th>
                            ImageCourseUrl
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            DiscountPrice
                        </th>
                        <th>
                            PreviewUrl
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Count
                        </th>
                        <th>
                            Rating
                        </th>
                        <th>
                            Language
                        </th>
                        <th>
                            TimeTotal
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @{
                                string levelClass = "bg-label-info";

                                if (item.Level.Name == "Beginner")
                                {
                                    levelClass = "bg-label-secondary";
                                }
                                else if (item.Level.Name == "Intermediate")
                                {
                                    levelClass = "bg-label-primary";
                                }
                                else if (item.Level.Name == "Expert")
                                {
                                    levelClass = "bg-label-danger";
                                }
                            }
                            <td>
                                <i class="fab fa-bootstrap fa-lg text-primary me-3"></i>
                                <span class="fw-medium">@item.CourseId</span>
                            </td>
                            @* <td>
                                @if (item.Staff != null)
                                {
                                    <span>@item.Staff.StaffName</span>
                                }
                            </td> *@
                            <td><span>@item.Staff.StaffName</span></td>
                            <td>
                                <span class="badge me-1 @levelClass">
                                    @item.Level.Name
                                </span>
                            </td>

                            <td class="hidetext">
                                <p class="content">@item.Title</p>
                                <button class="expand-button" style="display: none; border: none; width: 20px; height: 20px; background-color: transparent">&#9660;</button>
                            </td>
                            <td class="hidetext">
                                <p>@item.ShortDescription</p>
                                <button class="expand-button" style="display: none; border: none; width: 20px; height: 20px; background-color: transparent">&#9660;</button>
                            </td>
                            <td class="hidetext">
                                <p>@item.Description</p>
                                <button class="expand-button" style="display: none; border: none; width: 20px; height: 20px; background-color: transparent">&#9660;</button>
                            </td>
                            <td class="hidetext">
                                <p>@item.Required</p>
                                <button class="expand-button" style="display: none; border: none; width: 20px; height: 20px; background-color: transparent">&#9660;</button>
                            </td>
                            <td>
                                <img src="@item.ImageCourseUrl" width="150" height="100" />
                            </td>
                            <td>@item.Price</td>
                            <td>@item.DiscountPrice</td>
                            <td>
                                <img src="@item.PreviewUrl" width="200" height="100"/>
                            </td>
                            <td>
                                <span class="badge me-1 @(item.Status ? "bg-label-success" : "bg-label-warning")">
                                    @item.Status
                                </span>
                            </td>
                            <td>@item.Count</td>
                            <td>@item.Rating</td>
                            <td>@item.Language</td>
                            <td>@item.TimeTotal</td>
                            <td>
                                <a class="dropdown-item mb-2" asp-action="EditCourse" asp-route-id="@item.CourseId" style="color: #03c3ec; background-color:#d7f5fc; border-color: #b3edf9; padding: 5px 8px; border-radius: 5px;cursor:pointer"><i class="bx bx-trash me-1"></i> Edit</a>
                                <a class="dropdown-item mb-2" data-bs-toggle="modal" data-bs-target="#smallModal" style="color: #ff3e1d; background-color:#ffe0db; border-color: #ffc5bb; padding: 5px 8px; border-radius: 5px; cursor:pointer"><i class="bx bx-edit-alt me-1"></i> Delete</a>
                                @* <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#smallModal">
                                    Delete
                                </button> *@
                            </td>
                        </tr>

                        @* Small Model Delete *@
                        <div class="modal fade" id="smallModal" tabindex="-1" style="display: none;" aria-hidden="true">
                            <div class="modal-dialog modal-sm" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel2">Notification</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col mb-3">
                                                <h3>Do you want to delete?</h3>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                            Close
                                        </button>
                                        <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CourseId">Detele</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </tbody>
            </table>
        </div>
    </div>


    <!-- Hiển thị danh sách các khóa học -->
    <!-- ... -->
    @{
        var pageNumber = ViewBag.PageNumber ?? 1;
        var pageSize = ViewBag.PageSize ?? 5;
        var totalItems = ViewBag.TotalItems ?? 0;
        var totalPages = (int)Math.Ceiling((double)totalItems / pageSize);
        var showEllipsis = totalPages > 5;
    }

    <!-- Hiển thị phân trang -->
    <nav aria-label="Page navigation" class="d-flex justify-content-center">
        <ul class="pagination">
            @if (pageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = pageNumber - 1 })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }

            @for (int j = 1; j <= 2 && j <= totalPages; j++)
            {
                if (j == pageNumber)
                {
                    <li class="page-item active"><a class="page-link" href="#">@j</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = j })">@j</a></li>
                }
            }

            @if (pageNumber > 3 && showEllipsis)
            {
                <li class="page-item disabled">
                    <a class="page-link">...</a>
                </li>
            }

            @for (int j = Math.Max(pageNumber - 2, 3); j <= Math.Min(pageNumber + 2, totalPages); j++)
            {
                if (j == pageNumber)
                {
                    <li class="page-item active"><a class="page-link" href="#">@j</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = j })">@j</a></li>
                }
            }

            @if (pageNumber < totalPages - 2 && showEllipsis)
            {
                <li class="page-item disabled">
                    <a class="page-link">...</a>
                </li>
            }

            @if (pageNumber < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = pageNumber + 1 })" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
        </ul>
    </nav>

</div>

