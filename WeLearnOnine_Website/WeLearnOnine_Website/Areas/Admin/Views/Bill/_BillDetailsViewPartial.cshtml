@model WeLearnOnine_Website.ViewModels.BillViewModel
@{
    string statusClass = "bg-label-info";

    if (Model.Status == "Successful")
    {
        statusClass = "bg-label-success";
    }
    else if (Model.Status == "Processing")
    {
        statusClass = "bg-label-primary";
    }
    else if (Model.Status == "Fail")
    {
        statusClass = "bg-label-danger";
    }
}
<!-- Modal Header -->
<div class="modal-header">
    @* <h3 class="modal-title">Detail</h3> *@
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<!-- Modal body -->
<div class="modal-body">
    <div class="card-body">
        <div class="col-12">
            <div class="mb-3">
                <div class="row">
                    <div class="d-flex justify-content-between">
                        <div class="mb-xl-0 mb-4">
                            <div class="d-flex mb-3 gap-2">
                                <span class="app-brand-text demo text-body fw-bold"><b class="text-uppercase">B</b>ill  <b class="text-uppercase">D</b>etails</span>
                            </div>
                        </div>
                        <div>
                            @* <h4>Invoice #@(Model.BillId.ToString().Length >= 8 ? Model.BillId.ToString().Substring(0, 8) : Model.BillId.ToString())</h4> *@
                            <h4>Invoice #@Model.BillCode</h4>
                            <div class="mb-2">
                                <span class="me-1">Date Issues:</span>
                                <span class="fw-medium">@Model.CreateAt</span>
                            </div>
                            <div>
                                <span class="me-1">Date Due:</span>
                                <span class="fw-medium">@Model.ExpirationDate</span>
                            </div>
                        </div>
                    </div> 
                </div>
            </div>
        </div>
    </div>
        <hr class="my-0">
    <div class="card-body">
        <div class="col-12">
                <div class="row">
                    <div class="col-xl-6">
                        <h6 class="pb-2">Invoice To:</h6>
                        <p class="mb-1">User: @Model.UserName</p>
                        <p class="mb-1">Phone: @Model.PhoneNumber</p>
                        <p class="mb-0">Email: @Model.Email</p>
                    </div>
                    <div class="col-xl-6">
                        <h6 class="pb-2">Bill To:</h6>
                        <div class="d-flex">
                            <div class="col-left" style="width: 120px;">
                                <p class="mb-1">Total Due:</p>
                                <p class="mb-1">Payment Method:</p>
                            </div>
                            <div class="col-right">
                                <p class="mb-1">@Model.Total.ToString("#,##0") đ</p>
                                <p class="mb-1">@Model.PaymentMethod</p>
                            </div>
                        </div>    
                    </div>
                </div>
        </div>
    </div>

    <div class="card-body">
        <div class="col-12">
                <div class="row p-2 text-center align-items-center" style="border-top: 1px solid #d9dee3">
                    <span class="col-md-2">Image</span>
                    <span class ="col-md-4">Title</span>
                    <span class="col-md-3">Price</span>
                    <span class="col-md-3">DiscountPrice</span>
                </div>
            @foreach(var item_course in Model.BillDetails)
            {
                
                <div class="row p-2 text-center align-items-center" style="border-top: 1px solid #d9dee3">
                        <span class="col-md-2">
                            <img  src="@item_course.ImageCourseUrl" style="object-fit:cover; min-width: 145px" height="80"/>
                        </span>
                    <span class="col-md-4">@item_course.Title</span>
                    @if (item_course.DiscountPrice != null && item_course.DiscountPrice != 0)
                    {
                        <small class="col-md-3"><del>@string.Format("{0:N0}", item_course.Price)</del></small>
                        <span class="col-md-3">@string.Format("{0:N0}", item_course.DiscountPrice)</span>
                    }
                    else
                    {
                        <span class="col-md-3">@string.Format("{0:N0}", item_course.Price)</span>
                    }

                </div>
            }
        </div>
    </div>
    <div class="card-body">
        <div class="col-12">
            <div class="row">
                <div class="col-xl-9">
                    <p class="mb-1">Salesperson: @Model.CardHolderName</p>
                </div>
                <div class="col-xl-3">
                    <div class="d-flex">
                        <div class="col-left" style="width: 120px;">
                            <p class="mb-1">Subtotal:</p>
                            <p class="mb-1">Discount:</p>
                            <p class="mb-1">Total:</p>
                        </div>
                        <div class="col-right">
                            <p class="mb-1">@String.Format("{0:#,##0}", Model.HistoricalCost) đ</p>
                            <p class="mb-1">@String.Format("{0:#,##0}", Model.Promotion) đ</p>
                            <p class="mb-1">@Model.Total.ToString("#,##0") đ</p>
                        </div>
                    </div>
                <span class="mt-4 @statusClass fs-5">@Model.Status</span>
                </div>
        </div>
    </div>

</div>

<!-- Modal footer -->
