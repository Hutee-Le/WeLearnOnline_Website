                            <input class="btn btn-primary mx-3" value="Update" type="submit">

                            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                                <span>Cancel</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
