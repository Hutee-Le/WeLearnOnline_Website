    ViewData["Title"] = "CreateStaff";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fuild flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4"><span class="text-muted fw-light">Staff/</span>Edit</h4>
    <form asp-action="UpdateCategory" method="post" enctype="multipart/form-data">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <input type="text" class="form-control" id="i-input" placeholder="STF001" aria-label="Username" aria-describedby="basic-addon11" asp-for="CategoriesId">
                        <script>
                            document.getElementById("i-input").style.display = "none";
                        </script>

                        <div>
                            <label for="defaultFormControlInput" class="form-label">Name</label>
                            <input asp-for="CategoryName" type="text" class="form-control" id="defaultFormControlInput" placeholder="ASP.net Developer">
                            <div id="defaultFormControlHelp" class="form-text alert alert-warning mt-1">
                                Note: Entering a category name without selecting the categories below will default to the first category.
                            </div>
                        </div>

                        <div class="input-group my-3">
                            <style>
                                select {
                                    padding: 10px 15px;
                                    outline: none;
                                    border: 1px solid #ccc;
                                }
                            </style>

                            <div class="input-group my-3">
                                <label class="input-group-text" asp-for="ParentCategories">Category</label>
                                <select asp-for="ParentCategories" asp-items="ViewBag.CategoriesId" class="form-select">
                                    <option asp-for="ParentCategories" value="null">Default</option>
                                </select>
                            </div>

                        </div>

                        <div class="mt-3 d-flex justify-content-end">
